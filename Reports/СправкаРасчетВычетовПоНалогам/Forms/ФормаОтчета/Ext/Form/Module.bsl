		Если ВестиНалоговыйУчетРасчетовСБюджетомВРазрезеНалоговыхКомитетов Тогда
			НоваяСтрока = Отчет.ГруппировкаДоп.Добавить();
			НоваяСтрока.Поле           = "Субконто3";
			НоваяСтрока.Использование  = Истина;
			НоваяСтрока.Представление  = НСтр("ru = 'Налоговый комитет'");
			НоваяСтрока.ТипГруппировки = Перечисления.ТипДетализацииСтандартныхОтчетов.Иерархия;
		КонецЕсли;
		
		НоваяСтрока = Отчет.ГруппировкаДоп.Добавить();
		НоваяСтрока.Поле           = "Субконто1";
		НоваяСтрока.Использование  = Истина;
		НоваяСтрока.Представление  = НСтр("ru = 'Вид налога'");
		НоваяСтрока.ТипГруппировки = Перечисления.ТипДетализацииСтандартныхОтчетов.Иерархия;	
	
	КонецЕсли;
	
	// Заполнение таблицы Показатели	
	Если ЗаполняемыеНастройки.Свойство("Показатели") И ЗаполняемыеНастройки.Показатели Тогда
		
		СписокПоказателей = Новый СписокЗначений;
		СписокПоказателей.Добавить("СуммаНачальныйОстаток", НСтр("ru = 'Начальное сальдо'"));
		СписокПоказателей.Добавить("УплаченныйНалог"      , НСтр("ru = 'Уплата налога'"));
		СписокПоказателей.Добавить("НачисленныйНалог"     , НСтр("ru = 'Начисление налога'"));
		СписокПоказателей.Добавить("ВозвратНалога"   ,      НСтр("ru = 'Возврат налога'"));

		СписокПоказателей.Добавить("СуммаКонечныйОстаток" , НСтр("ru = 'Конечное сальдо'"));
		СписокПоказателей.Добавить("СуммаНалогаВычет"     , НСтр("ru = 'Сумма вычета'"));
		СписокПоказателей.Добавить("СуммаНалогаНЕВычет"   , НСтр("ru = 'Не разрешено к вычету'"));
		СписокПоказателей.Добавить("ВозвратНалога"   ,      НСтр("ru = 'Возврат налога'"));
		
		Для Каждого ЭлементСписка Из СписокПоказателей Цикл
			СтрокаТЧ 				= Отчет.Показатели.Добавить();
			СтрокаТЧ.Поле 			= ЭлементСписка.Значение;
			СтрокаТЧ.Представление 	= ЭлементСписка.Представление;
			СтрокаТЧ.Использование 	= Истина;
		КонецЦикла;

	КонецЕсли;
	
	// Заполнение Отбора при расшифровке	
	Если ЗаполняемыеНастройки.Свойство("Отбор") И ЗаполняемыеНастройки.Отбор И Отчет.РежимРасшифровки Тогда
		
		БухгалтерскиеОтчетыКлиентСервер.ДобавитьОтбор(
			Отчет.КомпоновщикНастроек,
			"Субконто1",
			Справочники.НалогиСборыОтчисления.ОтчисленияОбязательноеСоциальноеМедицинскоеСтрахование,
			ВидСравненияКомпоновкиДанных.НеРавно);

	КонецЕсли;
	
