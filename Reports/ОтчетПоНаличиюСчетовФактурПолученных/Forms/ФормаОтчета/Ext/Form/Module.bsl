Процедура ЗаполнитьНастройкамиПоУмолчанию(ЗаполняемыеНастройки) Экспорт
	
	// Управление показателями
	Если ЗаполняемыеНастройки.Свойство("Показатели") И ЗаполняемыеНастройки.Показатели Тогда
		
		СписокПоказателей = Новый СписокЗначений;
		
		СписокПоказателей.Добавить("СуммаБезНДСОборот",    НСтр("ru = 'Сумма без НДС'"));
		СписокПоказателей.Добавить("СуммаНДСОборот",       НСтр("ru = 'Сумма НДС'"));
		СписокПоказателей.Добавить("СуммаВсего",           НСтр("ru = 'Сумма всего'"));
		СписокПоказателей.Добавить("СФСуммаНДСРеглОборот", НСтр("ru = 'Сумма НДС регл. (по счету-фактуре)'"));
		СписокПоказателей.Добавить("СФОборотПоРеализацииРеглОборот", НСтр("ru = 'Оборот по реализации регл. (по счету-фактуре)'"));
		СписокПоказателей.Добавить("ЭСФСуммаНДС", НСтр("ru = 'Сумма НДС (ЭСФ)'"));
		СписокПоказателей.Добавить("ЭСФОборотПоРеализации", НСтр("ru = 'Оборот по реализации (ЭСФ)'"));
		
		Для Каждого ЭлементСписка Из СписокПоказателей Цикл
			СтрокаТЧ 				= Отчет.Показатели.Добавить();
			СтрокаТЧ.Поле 			= ЭлементСписка.Значение;
			СтрокаТЧ.Представление 	= ЭлементСписка.Представление;
			СтрокаТЧ.Использование 	= Истина;
		КонецЦикла;
		
	КонецЕсли;
	
	// Группировки
	Если ЗаполняемыеНастройки.Свойство("Группировка") И ЗаполняемыеНастройки.Группировка Тогда
		
		Отчет.Группировка.Очистить();
		
		Если УчетПоВсемОрганизациям Тогда
			НоваяСтрока = Отчет.Группировка.Добавить();
			НоваяСтрока.Поле           = "Организация";
			НоваяСтрока.Использование  = Истина;
			НоваяСтрока.Представление  = НСтр("ru = 'Организация'");
			НоваяСтрока.ТипГруппировки = Перечисления.ТипДетализацииСтандартныхОтчетов.Элементы;
		КонецЕсли;
		
		Если Отчет.ВидОтчета = "НаличиеДокументовПоступления" Тогда
			НоваяСтрока = Отчет.Группировка.Добавить();
			НоваяСтрока.Поле           = "СчетФактураПоступления";
			НоваяСтрока.Использование  = Истина;
			НоваяСтрока.Представление  = "Счет-фактура";
			НоваяСтрока.ТипГруппировки = Перечисления.ТипДетализацииСтандартныхОтчетов.Элементы;
		КонецЕсли;
	
	КонецЕсли;
	
	// Дополнительные поля	
	Если ЗаполняемыеНастройки.Свойство("ДополнительныеПоля") И ЗаполняемыеНастройки.ДополнительныеПоля Тогда
		
		Отчет.ДополнительныеПоля.Очистить();
		
		НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
		НоваяСтрока.Поле           = "Регистратор";
		НоваяСтрока.Представление  = НСтр("ru = 'Документ отгрузки'");
		НоваяСтрока.Использование  = Истина;
		
		НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
		НоваяСтрока.Поле           = "СчетФактураПоступления";
		НоваяСтрока.Представление  = НСтр("ru = 'Счет-фактура'");
		НоваяСтрока.Использование  = НЕ Отчет.ВидОтчета = "НаличиеДокументовПоступления";
		
		НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
		НоваяСтрока.Поле           = "СчетФактураПроведен";
		НоваяСтрока.Представление  = НСтр("ru = 'Счет-фактура проведен'");
		НоваяСтрока.Использование  = НЕ Отчет.ВидОтчета = "НаличиеДокументовПоступления";
		
		Если ПолучитьФункциональнуюОпцию("ИспользоватьОбменЭСФЧерезAPI")
			ИЛИ ПолучитьФункциональнуюОпцию("ИспользоватьОбменЭСФЧерезXML") Тогда
			
			НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
			НоваяСтрока.Поле           = "СпособПолучения";
			НоваяСтрока.Представление  = НСтр("ru = 'Способ выписки счета-фактуры'");
			НоваяСтрока.Использование  = Ложь;
			
			НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
			НоваяСтрока.Поле           = "ЭСФ";
			НоваяСтрока.Представление  = НСтр("ru = 'Электронный счет-фактура'");
			НоваяСтрока.Использование  = Ложь;
			
		КонецЕсли;
		
		НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
		НоваяСтрока.Поле           = "Контрагент";
		НоваяСтрока.Представление  = НСтр("ru = 'Контрагент'");
		НоваяСтрока.Использование  = Ложь;
		
		НоваяСтрока = Отчет.ДополнительныеПоля.Добавить();
		НоваяСтрока.Поле           = "Контрагент.ИдентификационныйКодЛичности";
		НоваяСтрока.Представление  = НСтр("ru = 'БИН/ИИН контрагента'");
		НоваяСтрока.Использование  = Ложь;
		
		Отчет.РазмещениеДополнительныхПолей = 1;
		
	КонецЕсли;
	
	Если ЗаполняемыеНастройки.Свойство("Отбор") И ЗаполняемыеНастройки.Отбор Тогда
		
		Отчет.КомпоновщикНастроек.Настройки.Отбор.Элементы.Очистить();
		
		БухгалтерскиеОтчетыКлиентСервер.ДобавитьОтбор(Отчет.КомпоновщикНастроек, "СчетФактураВыписан",  Ложь,, Ложь);
		БухгалтерскиеОтчетыКлиентСервер.ДобавитьОтбор(Отчет.КомпоновщикНастроек, "СчетФактураПроведен", Ложь,, Ложь);
		БухгалтерскиеОтчетыКлиентСервер.ДобавитьОтбор(Отчет.КомпоновщикНастроек, "СчетФактураПоступления.ВалютаДокумента", Справочники.Валюты.ПустаяСсылка(),, Ложь);
		
	КонецЕсли;
	
