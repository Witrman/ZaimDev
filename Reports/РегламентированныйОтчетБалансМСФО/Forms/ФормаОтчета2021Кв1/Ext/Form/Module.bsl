Функция ПолучитьТаблицуСчетов(Счет = Неопределено) Экспорт
	
	Запрос = Новый Запрос;
	ТекстЗапроса = 
	"ВЫБРАТЬ
	|	Типовой.Ссылка КАК Ссылка,
	|	Типовой.ИмяПредопределенныхДанных КАК ИмяСчета,
	|	Типовой.Наименование КАК Наименование
	|ИЗ
	|	ПланСчетов.Типовой КАК Типовой";
	
	Если Счет <> Неопределено Тогда
		ТекстЗапроса = ТекстЗапроса +
		"|	И Типовой.Ссылка = &Ссылка";
		Запрос.УстановитьПараметр("Ссылка", Счет);
	КонецЕсли;
	
	Запрос.Текст = ТекстЗапроса;	
	Результат = Запрос.Выполнить().Выгрузить();
	Возврат Результат;
	
