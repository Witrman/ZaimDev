		Текст = НСтр("ru='Перед заполнением таблица сопоставления будет очищена. Заполнить?'");
		Режим = РежимДиалогаВопрос.ДаНет;
		
		ПоказатьВопрос(ОписаниеОповещения, Текст, Режим, 0, КодВозвратаДиалога.Да);
		
	Иначе
		
		ЗаполнитьТаблицуСопоставленияКодовСтрок();
		
		Модифицированность = Истина;
		
	КонецЕсли;

