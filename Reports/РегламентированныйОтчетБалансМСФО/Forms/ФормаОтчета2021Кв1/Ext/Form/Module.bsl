&НаСервере 
Процедура ЗаполнитьТаблицуСопоставленияКодовСтрок() Экспорт
	
	ТаблицаСопоставленияКодовСтрок.Очистить();
	
	ТаблицаСопоставления = Новый ТаблицаЗначений;
	ТаблицаСопоставления.Колонки.Добавить("КодСтроки"         , Новый ОписаниеТипов("Строка",, Новый КвалификаторыСтроки(3)));
	ТаблицаСопоставления.Колонки.Добавить("Счет"              , Новый ОписаниеТипов("ПланСчетовСсылка.Типовой"));
	ТаблицаСопоставления.Колонки.Добавить("ВключенВСтроку"    , Новый ОписаниеТипов("Булево"));
	ТаблицаСопоставления.Колонки.Добавить("ИмяСчета"          , Новый ОписаниеТипов("Строка"));
	ТаблицаСопоставления.Колонки.Добавить("НаименованиеСчета" , Новый ОписаниеТипов("Строка"));
	ТаблицаСопоставления.Колонки.Добавить("НаименованиеСтроки", Новый ОписаниеТипов("Строка",, Новый КвалификаторыСтроки(512)));
	ТаблицаСопоставления.Колонки.Добавить("Раздел"            , Новый ОписаниеТипов("Строка",, Новый КвалификаторыСтроки(256)));
	
	ТаблицаСчетов = ПолучитьТаблицуСчетов();

	МакетСоставаПоказателей = РеквизитФормыВЗначение("ОтчетОбъект").ПолучитьМакет("СоставПоказателей");
	
	//Если ЗначениеЗаполнено(ЯзыкФормирования) Тогда
	//	МакетСоставаПоказателей.КодЯзыка = ЯзыкФормирования;		
	//КонецЕсли;
	
	ТекОбласть = МакетСоставаПоказателей.Область("Структура" + Прав(мВыбраннаяФорма,7));
	
	Для Ном = ТекОбласть.Верх По ТекОбласть.Низ Цикл
		// перебираем строки макета		
		ИмяСчета           = СокрП(МакетСоставаПоказателей.Область(Ном, 1).Текст);
		КодСтроки          = СокрП(МакетСоставаПоказателей.Область(Ном, 2).Текст);
		НаименованиеСтроки = СокрП(МакетСоставаПоказателей.Область(Ном, 3).Текст);
		Раздел             = СокрП(МакетСоставаПоказателей.Область(Ном, 4).Текст);
		
		Если ЗначениеЗаполнено(ИмяСчета) И ЗначениеЗаполнено(КодСтроки) Тогда         // признак конечной строки
			
			СтрокаТаблицыСчет = ТаблицаСчетов.Найти(ИмяСчета, "ИмяСчета");
			Если СтрокаТаблицыСчет <> Неопределено Тогда
				НоваяСтрока = ТаблицаСопоставления.Добавить();
				НоваяСтрока.КодСтроки = КодСтроки;
				НоваяСтрока.ИмяСчета = ИмяСчета;
				НоваяСтрока.Счет = СтрокаТаблицыСчет.Ссылка;
				НоваяСтрока.НаименованиеСчета = СтрокаТаблицыСчет.Наименование;
				НоваяСтрока.ВключенВСтроку = Истина;
				НоваяСтрока.НаименованиеСтроки = НаименованиеСтроки;
				НоваяСтрока.Раздел = Раздел;
			КонецЕсли;
				
		КонецЕсли;
		
	КонецЦикла;
	
	ТаблицаСопоставления.Сортировать("Раздел, КодСтроки, Счет");
	ТаблицаСопоставленияКодовСтрок.Загрузить(ТаблицаСопоставления);
	
	// Загрузка дерева кодов строк
	
	ТаблицаСопоставления.Свернуть("Раздел, КодСтроки, НаименованиеСтроки");

	Запрос = Новый Запрос;
	Запрос.МенеджерВременныхТаблиц = Новый МенеджерВременныхТаблиц;
	Запрос.УстановитьПараметр("ТаблицаСопоставления", ТаблицаСопоставления);
	Запрос.Текст = 
		"ВЫБРАТЬ РАЗЛИЧНЫЕ
		|	ВТ_ТаблицаСопоставления.КодСтроки КАК КодСтроки,
		|	ВТ_ТаблицаСопоставления.НаименованиеСтроки КАК НаименованиеСтроки,
		|	ВТ_ТаблицаСопоставления.Раздел КАК Раздел
		|ПОМЕСТИТЬ ВТ_ТаблицаСопоставления
		|ИЗ
		|	&ТаблицаСопоставления КАК ВТ_ТаблицаСопоставления
		|;
		|
		|////////////////////////////////////////////////////////////////////////////////
		|ВЫБРАТЬ
		|	ВТ_ТаблицаСопоставления.КодСтроки КАК КодСтроки,
		|	ВТ_ТаблицаСопоставления.НаименованиеСтроки КАК НаименованиеСтроки,
		|	ВТ_ТаблицаСопоставления.Раздел КАК Раздел
		|ИЗ
		|	ВТ_ТаблицаСопоставления КАК ВТ_ТаблицаСопоставления
		|
		|УПОРЯДОЧИТЬ ПО
		|	Раздел,
		|	КодСтроки
		|ИТОГИ ПО
		|	Раздел";
	
	РезультатЗапроса = Запрос.Выполнить();
	
	Разделы = РезультатЗапроса.Выбрать(ОбходРезультатаЗапроса.ПоГруппировкам);
	
    ДеревоКодовСтрок_ = РеквизитФормыВЗначение("ДеревоКодовСтрок");
	ДеревоКодовСтрок_.Строки.Очистить();
	
	Если Разделы.Количество() <> 0 Тогда
		
		Пока Разделы.Следующий() Цикл
			
			НовыйРаздел = ДеревоКодовСтрок_.Строки.Добавить();
			НовыйРаздел.Раздел = Разделы.Раздел;
			
			КодыСтрок = Разделы.Выбрать();
			Пока КодыСтрок.Следующий() Цикл
				НовыйКодСтроки = НовыйРаздел.Строки.Добавить();
				НовыйКодСтроки.Раздел = Разделы.Раздел;
				НовыйКодСтроки.КодСтроки = КодыСтрок.КодСтроки;
				НовыйКодСтроки.НаименованиеСтроки = КодыСтрок.НаименованиеСтроки;
			КонецЦикла;
			
		КонецЦикла;
		
	КонецЕсли;
	
	ЗначениеВРеквизитФормы(ДеревоКодовСтрок_, "ДеревоКодовСтрок");
	
КонецПроцедуры

&НаКлиентеНаСервереБезКонтекста
Процедура НастройкаСопоставленияКодовСтрок(Форма, КодСтроки = "0000", Раздел = "")
	
	ПараметрыОтбора = Новый Структура("Раздел", Раздел);
	Если НЕ (КодСтроки = "0000") Тогда
		ПараметрыОтбора.Вставить("КодСтроки", КодСтроки);
	КонецЕсли;

	ЭлементыФормы = Форма.Элементы;
	
	ОтборСтрок = Новый ФиксированнаяСтруктура(ПараметрыОтбора);
	
	ЭлементыФормы.ТаблицаСопоставленияКодовСтрок.ОтборСтрок = ОтборСтрок;
	
	ЭлементыФормы.ТаблицаСопоставленияКодовСтрокКонтекстноеМенюДобавить.Видимость = НЕ (КодСтроки = "0000");
	ЭлементыФормы.ТаблицаСопоставленияКодовСтрокДобавить.Видимость = НЕ (КодСтроки = "0000");	
	
КонецПроцедуры

&НаКлиенте
Процедура ТаблицаСопоставленияКодовСтрокВключенВСтрокуПриИзменении(Элемент)
	
	ТекущиеДанные = Элементы.ТаблицаСопоставленияКодовСтрок.ТекущиеДанные;
	
	Если ТекущиеДанные <> Неопределено И ТекущиеДанные.ВключенВСтроку Тогда
		ТекущиеДанные.ВключенВСтроку = Ложь;  // исключаем текущую строки из проверки
		ТекущиеДанные.ВключенВСтроку = ПроверитьСопоставление(ТекущиеДанные.Счет);
	КонецЕсли;
	
КонецПроцедуры

&НаСервере
Функция ПроверитьСопоставление(ВыбранноеЗначение)
	
	Если ЗначениеЗаполнено(ВыбранноеЗначение) Тогда
		
		НайденныеСтроки = ТаблицаСопоставленияКодовСтрок.НайтиСтроки(Новый Структура("Счет, ВключенВСтроку", ВыбранноеЗначение, Истина));
		
		Если НайденныеСтроки.Количество() > 0 Тогда
			
			Для Каждого НайденнаяСтрока Из НайденныеСтроки Цикл
				ТекстСообщения = НСТР("ru = 'Счет <%1> уже используется при заполнении строки ""%2""...'");
				ТекстСообщения = СтроковыеФункцииКлиентСервер.ПодставитьПараметрыВСтроку(ТекстСообщения, НайденнаяСтрока.Счет, НайденнаяСтрока.КодСтроки);
		        ОбщегоНазначения.СообщитьПользователю(ТекстСообщения);                
			КонецЦикла;
			
			Возврат Ложь;
			
		КонецЕсли;
		
		Возврат Истина;
		
	КонецЕсли;
		
	Возврат Ложь;
		
КонецФункции

&НаКлиенте
Процедура ЗаполнитьНастройкамиДругогоОтчетаЗавершение(Результат, Параметры) Экспорт
	
	Если Результат <> Неопределено Тогда
		
		ДополнительныеПараметры = Новый Структура;
		ДополнительныеПараметры.Вставить("Результат", Результат);
		
		ОписаниеОповещения = Новый ОписаниеОповещения("ВопросЗаполнитьНастройкамиДругогоОтчетаЗавершение", ЭтаФорма, ДополнительныеПараметры);
		
		Текст = НСтр("ru='Перед заполнением таблица сопоставления будет очищена. Перенести настройки из выбранного отчета?'");
		Режим = РежимДиалогаВопрос.ДаНет;
		
		ПоказатьВопрос(ОписаниеОповещения, Текст, Режим, 0, КодВозвратаДиалога.Да);
		
		Модифицированность = Истина;
		
	КонецЕсли;
	
КонецПроцедуры

&НаКлиенте
Процедура ВопросЗаполнитьНастройкамиДругогоОтчетаЗавершение(Ответ, ДополнительныеПараметры) Экспорт

	Если Ответ = Неопределено Тогда
		Возврат;
	КонецЕсли;
	
	Если Ответ = КодВозвратаДиалога.Да Тогда
		
		ЗаполнитьТаблицуСопоставленияНастройкамиДругогоОтчета(ДополнительныеПараметры);
				
		Модифицированность = Истина;
		
	КонецЕсли;

КонецПроцедуры

&НаСервере 
Процедура ЗаполнитьТаблицуСопоставленияНастройкамиДругогоОтчета(ДополнительныеПараметры) Экспорт
	
	ТаблицаСопоставленияКодовСтрок.Очистить();
	
	ДанныеОтчета = ДополнительныеПараметры.Результат.ДанныеОтчета.Получить();

	ПолученнаяТаблицаСопоставленияКодовСтрок = ДанныеОтчета.СтруктураДополнительныхРеквизитовФормы.ТаблицаСопоставленияКодовСтрок;
	
	ПолученноеДеревоКодовСтрок 				 = ДанныеОтчета.СтруктураДополнительныхРеквизитовФормы.ДеревоКодовСтрок;
	
	ТаблицаСопоставленияКодовСтрок.Загрузить(ПолученнаяТаблицаСопоставленияКодовСтрок);
	
	ЗначениеВРеквизитФормы(ПолученноеДеревоКодовСтрок, "ДеревоКодовСтрок");
	
КонецПроцедуры
